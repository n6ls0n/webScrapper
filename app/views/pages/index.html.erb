<p style="color: green"><%= notice %></p>

<div class = "flex justify-between">
  <h1 class = "text-4xl font-italic">Pages</h1>
  <%= link_to "New page", new_page_path, class:"border border-gray-200 rounded shadow px-2 py-2 hover:bg-gray-400"%>
</div>

<div id="pages">
  <% @pages.each do |page| %>
    <%= render page %>
    <p>
      <%= link_to "Show this page", page %>
    </p>
  <% end %>
</div>


